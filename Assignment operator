public static void assignmentDemo() {
        System.out.println("\n--- Assignment Operators ---");
        int a = 10;
        int b = 20;
        a += b;
        System.out.println("The value of a is: " + a);
        
        int c = 45;
        c %= 2;
        System.out.println("The value of c is: " + c);
    }
